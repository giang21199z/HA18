<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_60"
    android:background="#fff"

    android:orientation="horizontal"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/margin_60"
        android:layout_weight="18"></LinearLayout>

    <LinearLayout
        android:id="@+id/itemCLick"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="82"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="70"
            android:gravity="center_vertical">

            <TextView
                android:layout_marginLeft="@dimen/margin_10"
                android:id="@+id/tv_Name"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:text="Nguyen Ngoc Anh"
                android:textSize="@dimen/text_size_20" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:gravity="center_vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/cv_Attendance"

                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_30"
                android:layout_marginLeft="@dimen/margin_4"
                android:layout_marginRight="@dimen/margin_4"
                card_view:cardBackgroundColor="@color/colorPresent"
                card_view:cardCornerRadius="@dimen/margin_3"
                card_view:cardElevation="0dp"

                card_view:cardUseCompatPadding="true">

                <TextView
                    android:id="@+id/tv_Attendance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Present"
                    android:textColor="#fff"
                    android:textSize="@dimen/margin_14"
                    android:textStyle="bold" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>