<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:cardBackgroundColor="#fff"
        android:cardCornerRadius="@dimen/margin_3"
        android:cardElevation="@dimen/margin_2"
        android:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_80"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/imageview_teacher"
                android:layout_width="@dimen/margin_50"
                android:layout_height="@dimen/margin_50"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/textview_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_20"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/margin_10"
                android:text="Nguyen Manh Hung"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>